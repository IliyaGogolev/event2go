<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/button_redborder_background_pressed">
    <item>
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_redborder_background_pressed" />
                    <stroke android:width="1dp" android:color="@color/button_red_normal" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/button_redborder_background_normal" />
                    <stroke android:width="1dp" android:color="@color/button_red_normal" />
                </shape>
            </item>
        </selector>
    </item>
</ripple>