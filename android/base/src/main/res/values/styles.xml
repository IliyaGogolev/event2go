<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Base.Theme.MyApp">
    </style>


    <style name="BaseAppTheme.NoActionBar" parent="Base.Theme.MyApp.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>


    <style name="Base.Theme.MyApp" parent="Theme.AppCompat.Light">

        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:windowBackground">@color/window_background</item>
        <!-- changed for option menu -->
        <item name="android:textSize">14sp</item>
        <item name="colorButtonNormal">@color/button_color</item>

        <item name="android:imageButtonStyle">@style/Base.ButtonStyle.ImageButton</item>

        <!-- set Spinner listener underlined -->
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

        <!--<item name="spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>-->
        <!--<item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>-->
        <item name="android:dropDownItemStyle">@style/AppTheme.DropDownItemStyle</item>


    </style>

    <style name="Base.Theme.MyApp.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>

        <item name="android:windowBackground">@color/window_background</item>
        <!-- changed for option menu -->
        <item name="android:textSize">14sp</item>
        <item name="colorButtonNormal">@color/button_color</item>

        <item name="android:imageButtonStyle">@style/Base.ButtonStyle.ImageButton</item>

        <!-- set Spinner listener underlined -->
        <item name="spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.Underlined</item>

        <!--<item name="spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>-->
        <!--<item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner.DropDown</item>-->
        <item name="android:dropDownItemStyle">@style/AppTheme.DropDownItemStyle</item>


    </style>


    <style name="Base.ButtonStyle.Red" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_red</item>
        <item name="android:textColor">@color/button_red_text</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Base.ButtonStyle.ImageButton" parent="android:Widget.ImageButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="AppTheme.DropDownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <!--<item name="android:textColor">@android:color/black</item>-->
        <item name="android:textColor">@color/light_grey</item>
        <item name="android:background">@drawable/dropdown_item_background</item>
    </style>

    <style name="Base.ButtonStyle.Transparent" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/text_dark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/button_background_transparent</item>
    </style>

    <style name="Base.Dialog.ButtonStyle" parent="@style/Base.ButtonStyle.Transparent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dialog_button</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:background">@drawable/button_background_transparent</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">2</item>
    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

    <style name="RedButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_background_red</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- no actionbar activity style -->
    <style name="Base_AppBaseTheme.NoActionBar" parent="BaseAppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <!--###########################-->

    <!--###########################-->
    <!-- **** TabLayout Style *****-->
    <style name="Base.TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tab_indicator_color</item>
        <item name="tabSelectedTextColor">@color/tab_selected_color</item>
        <!--<item name="tabMaxWidth">@dimen/tab_max_width</item>-->
        <item name="tabIndicatorHeight">3dp</item>
        <!--<item name="tabPaddingStart">12dp</item>-->
        <!--<item name="tabPaddingEnd">12dp</item>-->
        <!--<item name="tabBackground">?attr/selectableItemBackground</item>-->
        <item name="tabTextAppearance">@style/Base.TabLayoutStyle.TabTextAppearance</item>
    </style>

    <style name="Base.TabLayoutStyle.TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_custom_font_color</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <!--<item name="android:textColor">?android:textColorSecondary</item>-->
        <item name="android:gravity">center</item>
        <item name="textAllCaps">false</item>
    </style>
